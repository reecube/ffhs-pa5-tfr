<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" scaleShape="false" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ffhs.pa5.view.View">
    <center>
        <VBox prefHeight="800.0" prefWidth="831.0" BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="%menu_file">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#onMenuNew" text="%menu_new" />
                                <MenuItem mnemonicParsing="false" onAction="#onMenuOpen" text="%menu_open" />
                                <MenuItem mnemonicParsing="false" onAction="#onMenuSave" text="%menu_save" />
                                <MenuItem mnemonicParsing="false" onAction="#onMenuSaveAs" text="%menu_saveAs" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <TabPane fx:id="tabPane" prefHeight="146.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab fx:id="tabPreparation" text="%label_preparation">
                            <content>
                                <VBox prefHeight="738.0" prefWidth="600.0" styleClass="tab-content">
                                    <children>
                                        <VBox prefHeight="188.0" prefWidth="1190.0">
                                            <children>
                                                  <Label text="%label_title" />
                                                  <TextField fx:id="inputMeetingTitle" maxWidth="-Infinity" prefHeight="27.0" prefWidth="600.0" promptText="%label_title" />
                                                <GridPane prefHeight="130.0" prefWidth="1170.0" VBox.vgrow="ALWAYS">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="386.0" minWidth="10.0" prefWidth="380.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="400.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                    <children>
                                                        <Label text="%label_date">
                                                        </Label>
                                                        <Label text="%label_place" GridPane.columnIndex="1">
                                                        </Label>
                                                        <TextArea fx:id="inputMeetingLocation" prefHeight="200.0" prefWidth="200.0" promptText="%label_place" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                                        </TextArea>
                                                        <DatePicker fx:id="inputMeetingDate" prefHeight="27.0" prefWidth="384.0" GridPane.halignment="LEFT" GridPane.rowIndex="1" GridPane.valignment="TOP">
                                                        </DatePicker>
                                                    </children>
                                                </GridPane>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </VBox>
                                        <VBox prefHeight="200.0" prefWidth="901.0">
                                            <children>
                                                <Label text="%label_participants" />
                                                <HBox prefHeight="163.0" prefWidth="770.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <VBox prefHeight="163.0" prefWidth="165.0">
                                                            <children>
                                                                <Button mnemonicParsing="false" onAction="#onAddParticipant" text="%button_add">
                                                                </Button>
                                                                <Button fx:id="buttonParticipantEdit" disable="true" mnemonicParsing="false" onAction="#onEditParticipant" text="%button_edit">
                                                                </Button>
                                                                <Button fx:id="buttonParticipantRemove" disable="true" mnemonicParsing="false" onAction="#onRemoveParticipant" text="%button_remove">
                                                                </Button>
                                                            </children>
                                                        </VBox>
                                                        <ListView fx:id="outputParticipants" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="600.0" HBox.hgrow="ALWAYS" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                        <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <Label text="%label_agendaItems" />
                                                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <VBox prefHeight="271.0" prefWidth="165.0">
                                                            <children>
                                                                <Button mnemonicParsing="false" onAction="#onAddAgendaItem" text="%button_add">
                                                                </Button>
                                                                <Button fx:id="buttonAgendaItemEdit" disable="true" mnemonicParsing="false" onAction="#onEditAgendaItem" text="%button_edit">
                                                                </Button>
                                                                <Button fx:id="buttonAgendaItemRemove" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#onRemoveAgendaItem" text="%button_remove">
                                                                </Button>
                                                                <Button fx:id="buttonAgendaItemMoveUp" disable="true" mnemonicParsing="false" onAction="#onMoveAgendaItemUp" text="%button_moveUp">
                                                                </Button>
                                                                <Button fx:id="buttonAgendaItemMoveDown" disable="true" mnemonicParsing="false" onAction="#onMoveAgendaItemDown" text="%button_moveDown">
                                                                </Button>
                                                            </children>
                                                        </VBox>
                                                        <ListView fx:id="outputAgendaItemsPreparation" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="200.0" prefWidth="600.0" HBox.hgrow="ALWAYS" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="tabMeeting" text="%label_meeting">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label text="%label_agendaItems" />
                                        <VBox prefHeight="200.0" prefWidth="100.0" VBox.vgrow="ALWAYS">
                                            <children>
                                                <ListView fx:id="outputAgendaItemsMeeting" prefHeight="300.0" prefWidth="1180.0" />
                                                <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                                                    <children>
                                                        <TextArea fx:id="inputAgendaItemContent" disable="true" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                                                        <Button fx:id="buttonAgendaItemContentSave" mnemonicParsing="false" onAction="#onSaveAgendaItemContent" text="%button_save">
                                                            <opaqueInsets>
                                                                <Insets />
                                                            </opaqueInsets>
                                                        </Button>
                                                    </children>
                                                </HBox>
                                            </children>
                                        </VBox>
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="tabEnding" text="%label_ending">
                            <content>
                                <VBox prefHeight="200.0" prefWidth="100.0">
                                    <children>
                                        <Label text="%label_nextMeeting">
                                        </Label>
                                        <DatePicker fx:id="inputMeetingNextMeeting">
                                        </DatePicker>
                                        <ChoiceBox fx:id="inputExport" prefWidth="150.0">
                                        </ChoiceBox>
                                        <Button fx:id="buttonExport" mnemonicParsing="false" onAction="#onExportMeeting" text="%button_export">
                                        </Button>
                                        <Button mnemonicParsing="false" onAction="#onCloseMeeting" text="%button_closeMeeting" />
                                    </children>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
            </children>
        </VBox>
    </center>
</BorderPane>
